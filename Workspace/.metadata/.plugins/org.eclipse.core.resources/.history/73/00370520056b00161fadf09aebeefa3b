import java.io.BufferedReader;
import java.io.InputStreamReader;

public class Principal {

	public static void main(String[] args) {

		triTableauV1();
	}

	/**
	 * Tri d'un tableau initialisé de façon statique.
	 */
	public static void triTableauV1() {

		int[] tableau;
		try {
			tableau = lireTableau();
		
			printTable(tableau);
			
//			tableau = new int[] {1,2,3,4,5};
			
			Collection.triBulleV2(tableau);
			
			printTable(tableau);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public static void printTable(int[] tableau) {
		for (int i = 0; i < tableau.length; i++)
			System.out.println(tableau[i]);
	}
	
	/**
	 * 
	 * @return un tableau d'entier
	 * @throws Exception
	 */
	public static int[] lireTableau() throws Exception {
		System.out.println("Combien de nombre?");
		try {
			BufferedReader entre = new BufferedReader(new InputStreamReader(System.in));
			int taille = Integer.parseInt(entre.readLine());
			int[] tableau = new int[taille];
			for (int i = 0; i < tableau.length; i++) {
				System.out.println("Entre un calisse de nombre :");
				tableau[i] = Integer.parseInt(entre.readLine());
			}
			return tableau;
			
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			return tableau;
		}
	}
	
	/**
	 * 
	 * @param tableau
	 * @param nombre
	 * @return index du premier nombre
	 */
	public static int rechercheDichotomique(int[] tableau, int nombre) {
		int index = -1;
		int moitie;
		int nombreIteration = 0;
		do {
			System.out.printf("%s itération(s)", nombreIteration);
			moitie = tableau.length / 2;
			if (tableau[moitie] > nombre)
				moitie = moitie + moitie / 2;
			else if (tableau[moitie] < nombre)
				moitie /= 2;
			else
				index = moitie;
		} while(index == -1);
		return index;
	}
}
