<Window x:Class="laboPO01v2.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laboPO01v2"
        mc:Ignorable="d"
        Title="Options" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" Height="auto" LastChildFill="False" VerticalAlignment="Stretch" Width="auto">
            <Label Content="Inscrire le titre du dictionnaire" DockPanel.Dock="Top" VerticalAlignment="Top"/>
            <TextBox Name="txtTitreDico" DockPanel.Dock="Top"/>
            <Label Content="Chaîne de remplissage" DockPanel.Dock="Top"/>
            <TextBox Name="txtChaineDico" DockPanel.Dock="Top"/>
            <Label Content="Premier dictionnaire (par défaut: &quot;Français&quot;)" DockPanel.Dock="Top"/>
            <TextBox Name="txt1eDico" DockPanel.Dock="Top"/>
            <Label Content="Deuxième dictionnaire (OBLIGATOIRE)" DockPanel.Dock="Top"/>
            <TextBox Name="txt2eDico" DockPanel.Dock="Top"/>
            <Button Name="btnAccepter" Content="Accepter les paramètres" DockPanel.Dock="Bottom" Margin="0,0,0,10" Click="btnAccepter_Click"/>
        </DockPanel>
    </Grid>
</Window>
