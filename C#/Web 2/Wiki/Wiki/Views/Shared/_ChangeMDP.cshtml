@using Wiki.Resources.Views
@model Wiki.Models.Views.UserChangeMdpViewModel

<div class="modal fade" id="changerMDP" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
                <h4 class="modal-title">@Strings.MdpChanger</h4>
            </div>
            @using (Html.BeginForm("ChangeMdp", "Utilisateurs", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    @Html.HiddenFor(model => model.Courriel)
                    <div class="form-group">
                        @Html.LabelFor(model => model.AncienMdp, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.AncienMdp, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AncienMdp, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NouveauMdp, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.NouveauMdp, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NouveauMdp, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Strings.Fermer</button>
                    <button type="submit" class="btn btn-success">@Strings.Sauvegarder</button>
                </div>
            }
        </div>
    </div>
</div>