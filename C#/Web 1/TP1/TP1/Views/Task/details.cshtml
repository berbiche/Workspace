@model TP1.Models.Tache

@{
    ViewBag.Title = "details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Détails @Model.Id</h2>
<hr />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClosedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.Id)
        </td>
        <td>
            @Html.DisplayFor(model => model.Description)
        </td>
        <td>
            @Html.DisplayFor(model => model.Client)
        </td>
        <td>
            @Html.DisplayFor(model => model.Priority)
        </td>
        <td>
            @Html.DisplayFor(model => model.Creation)
        </td>
        <td>
            @Html.DisplayFor(model => model.Due)
        </td>
        <td>
            @Html.DisplayFor(model => model.ClosedDate)
        </td>
        <td>
            @if (Model.Done)
            { <span>Terminée</span> }
            else
            { <span>Incomplète</span> }
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Éditer", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Retour à la liste de tâche", "Index")
</p>
