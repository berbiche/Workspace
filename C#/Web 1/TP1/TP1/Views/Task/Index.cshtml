@model IEnumerable<TP1.Models.Tache>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Liste des tâches</h2>
<h3>
    @Html.ActionLink("Créer une nouvelle tache", "Create")
</h3>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Due)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th>Options supplémentaires</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr style="color:@(@item.Due < DateTime.Now && item.Done == false? "red" : "black")">
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosedDate)
            </td>
            <td>
                @if (item.Done)
                { <span>Terminé</span> }
                else
                { <span>Incomplet</span> }
            </td>
            <td>
                @Html.ActionLink("Éditer", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                @if (!item.Done)
                {
                    using (Html.BeginForm("Terminate", "Task", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.Id )
                        <input type="submit" class="btn btn-default btn-primary" value="Terminer"/>
                    }
                }
            </td>
        </tr>
        }
    </table>
</div>