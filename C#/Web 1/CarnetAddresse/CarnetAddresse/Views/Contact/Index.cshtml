@model List<CarnetAddresse.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<hr />
@using (Html.BeginForm("", "Contact", FormMethod.Get, new { @class = "form" }))
{
    <div class="form-group">
	    @Html.Label("q", "Rechercher")
	    @Html.TextBox("q", null, null, new { @class = "form-control" })
    </div>
}
@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
@if (ViewBag.q != null && ViewBag.q)
{
	@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
}
<br><br>
<table class="table table-striped table-condensed">
	<tr>
		<th>
			@Html.Label("Id", "Id")
		</th>
		<th>
			@Html.Label("Nom", "Nom")
		</th>
		<th>
			@Html.Label("Telephone", "Téléphone")
		</th>
		<th>
			@Html.Label("Courriel", "Courriel")
		</th>
		<th>
			@Html.Label("DateNaissance", "Date de naissance")
		</th>
		<th>
			@Html.Label("CodePostal", "Code postal")
		</th>
		<th colspan="3"></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Id)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Nom)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Telephone)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Courriel)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateNaissance)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CodePostal)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
			</td>
			<td>
				@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
			</td>
			<td>
				@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
			</td>
		</tr>
	}

</table>
